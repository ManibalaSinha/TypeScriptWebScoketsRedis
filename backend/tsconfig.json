{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,       // Required
    "emitDecoratorMetadata": true,        // Required for class-validator
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
